
<!DOCTYPE html>
<html lang="en" class="light-style layout-menu-fixed" dir="ltr" data-theme="theme-default">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/resources/css/style.css" asp-append-version="true"/>
    <link href="https://fonts.googleapis.com/css2?family=Roboto" rel="stylesheet" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="icon" type="image/gif" href="~/resources/images/frontendImages/admic.png">
    <script src="~/lib/jquery/jquery.js" asp-append-version="true"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js" asp-append-version="true"></script>
    <script src="~/lib/tinymce/tinymce.min.js" asp-append-version="true"></script>
    <script src="~/lib/tinymce/init-tinymce.js" asp-append-version="true"></script>
</head>

<body>

    @{
        if (TempData["success"] != null)
        {
            @await Component.InvokeAsync("FixedElements", "SuccessMain")

        }
        else if (TempData["error"] != null)
        {
              @await Component.InvokeAsync("FixedElements", "FailedMain")
        }

        @await Component.InvokeAsync("FixedElements", "LoadingMain")

        @await Component.InvokeAsync("FixedElements", "ScrollupMain")

        @await Component.InvokeAsync("FixedElements", "SuccessHiddenMain")

        @await Component.InvokeAsync("FixedElements", "FailedHiddenMain")

        @await Component.InvokeAsync("FixedElements", "DisconnectedHiddenMain")
        
    }

    <header class="header div-margin">
        <div class="header-fixed-side">
            <!-- <div class="header-logo">
                <img src="./admic.svg" alt="Admic SAL">
            </div> -->
            <div class="header-nav">
                <ul>

                    <a asp-controller="Home" asp-action="Main">
                         <li class="header-li-home header-right-side-hide nav-context"><svg class="" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke-width="3" stroke="#fff"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" /></svg><span  href="#"> Home</span></li>
                    </a>

                    <a asp-controller="ItemData" asp-action="Main">
                         <li class="header-li-itemdata header-right-side-hide nav-context"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2"><path d="M14 2H6a2 2 0 0 0-2 2v16c0 1.1.9 2 2 2h12a2 2 0 0 0 2-2V8l-6-6z" /><path d="M14 3v5h5M16 13H8M16 17H8M10 9H8" /></svg><span> Item data</span></li>
                    </a>

                    <li id="header-li-account header-right-side-display-account" class="header-li-account header-right-side-display-account nav-context"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2" /><circle class="svg-account-circle" cx="12" cy="7" r="4"></circle></svg><span href="#">User</span></li>
                   
                    @{

                        var userRole = Context?.Session?.GetString("CanCreateUser");

                        if (userRole == "True")
                         {
                            <li class="header-li-setup header-right-side-display-setup nav-context">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">

                                    <g id="SVGRepo_bgCarrier" stroke-width="0" />

                                    <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" />

                                    <g id="SVGRepo_iconCarrier"> <path d="M12 15C13.6569 15 15 13.6569 15 12C15 10.3431 13.6569 9 12 9C10.3431 9 9 10.3431 9 12C9 13.6569 10.3431 15 12 15Z" stroke="#ffffff" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" /> <path d="M2 12.8799V11.1199C2 10.0799 2.85 9.21994 3.9 9.21994C5.71 9.21994 6.45 7.93994 5.54 6.36994C5.02 5.46994 5.33 4.29994 6.24 3.77994L7.97 2.78994C8.76 2.31994 9.78 2.59994 10.25 3.38994L10.36 3.57994C11.26 5.14994 12.74 5.14994 13.65 3.57994L13.76 3.38994C14.23 2.59994 15.25 2.31994 16.04 2.78994L17.77 3.77994C18.68 4.29994 18.99 5.46994 18.47 6.36994C17.56 7.93994 18.3 9.21994 20.11 9.21994C21.15 9.21994 22.01 10.0699 22.01 11.1199V12.8799C22.01 13.9199 21.16 14.7799 20.11 14.7799C18.3 14.7799 17.56 16.0599 18.47 17.6299C18.99 18.5399 18.68 19.6999 17.77 20.2199L16.04 21.2099C15.25 21.6799 14.23 21.3999 13.76 20.6099L13.65 20.4199C12.75 18.8499 11.27 18.8499 10.36 20.4199L10.25 20.6099C9.78 21.3999 8.76 21.6799 7.97 21.2099L6.24 20.2199C5.33 19.6999 5.02 18.5299 5.54 17.6299C6.45 16.0599 5.71 14.7799 3.9 14.7799C2.85 14.7799 2 13.9199 2 12.8799Z" stroke="#ffffff" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" /> </g>

                                </svg><span href="#">Setup</span>
                            </li>
                         }                                       
                    }
                   
                </ul>
            </div>

            <div class="header-section">
                @{
                    if (Model != null )
                    {
                        Type modelType = Model.GetType();

                        if (modelType == typeof(List<List<AttributeSetupModel>>))
                        {
                            <li class="header-li-section header-right-side-display-sections">
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fff">

                                    <g id="SVGRepo_bgCarrier" stroke-width="0" />

                                    <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round" />

                                    <g id="SVGRepo_iconCarrier"> <g id="Edit / Rows"> <g id="Vector"> <path d="M6.5 19H17.5C17.9647 19 18.197 18.9999 18.3902 18.9614C19.1836 18.8036 19.8036 18.1836 19.9614 17.3902C19.9999 17.197 19.9999 16.9647 19.9999 16.5C19.9999 16.0353 19.9999 15.8031 19.9614 15.6099C19.8036 14.8165 19.1836 14.1962 18.3902 14.0384C18.197 14 17.9647 14 17.5 14H6.5C6.03534 14 5.80306 14 5.60986 14.0384C4.81648 14.1962 4.19624 14.8165 4.03843 15.6099C4 15.8031 4 16.0354 4 16.5C4 16.9647 4 17.1969 4.03843 17.3901C4.19624 18.1835 4.81648 18.8036 5.60986 18.9614C5.80306 18.9999 6.03535 19 6.5 19Z" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /> <path d="M6.5 10H17.5C17.9647 10 18.197 9.99986 18.3902 9.96143C19.1836 9.80361 19.8036 9.18356 19.9614 8.39018C19.9999 8.19698 19.9999 7.96465 19.9999 7.5C19.9999 7.03535 19.9999 6.80306 19.9614 6.60986C19.8036 5.81648 19.1836 5.19624 18.3902 5.03843C18.197 5 17.9647 5 17.5 5H6.5C6.03534 5 5.80306 5 5.60986 5.03843C4.81648 5.19624 4.19624 5.81648 4.03843 6.60986C4 6.80306 4 7.03539 4 7.50004C4 7.9647 4 8.19694 4.03843 8.39014C4.19624 9.18352 4.81648 9.80361 5.60986 9.96143C5.80306 9.99986 6.03535 10 6.5 10Z" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" /> </g> </g> </g>

                                </svg><span href="#">Sections</span>
                            </li>
                        } 
                    }
                }
            </div>

            <div class="header-edit">
                @{
                    if (Model != null)
                    {
                        Type modelType = Model.GetType();

                        if (modelType == typeof(List<List<AttributeSetupModel>>))
                        {
                            <ul>
                                <li id="save"  class="header-li-save header-right-side-hide"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2"><path d="M19 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h11l5 5v11a2 2 0 0 1-2 2z"></path><polyline points="17 21 17 13 7 13 7 21"></polyline><polyline points="7 3 7 8 15 8"></polyline></svg><span href="#"> Save</span></li>
                                <li id="clear-all"  class="header-li-clear header-right-side-hide"><svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg><span> Clear</span></li>
                            </ul>
                        }
                    }
                }
            </div>
        </div>
    </header>

    <div class="header-right-side div-margin">
        <ul class="header-options h-account">
            <a asp-controller="User" asp-action="ChangePassword"><li class="header-option"><span> Change password</span></li></a>
           <a asp-controller="User" asp-action="Logout"> <li class="header-option"><span> Sign out</span></li></a>
        </ul>
        <ul class="header-options h-setup">
            <a asp-controller="User" asp-action="Register">
            <li class="header-option"><span> User registration</span></li></a>
        </ul>
        <ul class="header-options h-sections">
            @{
                if (Model != null)
                {
                    Type modelType = Model.GetType();

                    if (modelType == typeof(List<List<AttributeSetupModel>>))
                    {
                        if (Model[0] != null)
                        {
                            foreach (var item in Model[0])
                            {
                                 <li class="header-option"><span class="attributeSetup"> @item.Name </span></li>
                            }
                        }
                    }
                } 
            }
        </ul>
    </div>

        @RenderBody();

    <script src=~/resources/js/main.js asp-append-version="true" defer></script>
</body>
</html>
